\newcommand\CellText[2]{%
  \node[texto,left=of mat#1,anchor=east]
  at (mat#1.west)
  {#2};
}
\newcommand\RowTitle[2]{%
  \node[title,left=6.3cm of mat#1,anchor=west]
  at (mat#1.north west)
  {#2};
}


